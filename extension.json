{
    "identifier": "genealabs.intelephense",
    "name": "Intelephense",
    "organization": "GeneaLabs",
    "description": "Nova wrapper of the fabulous Intelephense language server from Ben Mewburn.",
    "version": "0.2.0",
    "categories": ["languages"],

    "main": "main.js",

    "activationEvents": [
        "onLanguage:php",
        "onLanguage:blade",
        "onWorkspaceContains:composer.json",
        "onWorkspaceContains:phpcs.xml",
        "onWorkspaceContains:phpmd.xml",
        "onWorkspaceContains:phpunit.xml"
    ],

    "entitlements": {
        "process": true,
        "filesystem": "readwrite"
    },

    "bugs": "https://github.com/GeneaLabs/panic-nova-intelephense/issues",
    "repository": "https://github.com/GeneaLabs/panic-nova-intelephense",

    "commands": {
        "extensions": [
            {
                "title": "Restart Intelephense",
                "command": "genealabs.intelephense.restart"
            }
        ]
    },

    "config": [
        {
            "key": "genealabs.intelephense.debugging",
            "title": "Debugging",
            "description": "Show debug logs in Extension Console.",
            "type": "boolean",
            "default": false
        },
        {
            "key": "intelephense.files.associations",
            "title": "Files associations",
            "type": "array",
            "default": [
                "*.php",
                "*.phtml"
            ],
            "description": "Configure glob patterns to make files available language server features. Inherits from files.associations.",
            "scope": "window"
        },
        {
            "key": "intelephense.files.maxSize",
            "title": "Max. file size",
            "type": "number",
            "default": 1000000,
            "description": "Maximum file size in bytes.",
            "scope": "window"
        },
        {
            "key": "intelephense.files.exclude",
            "title": "Exclude files",
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": [
                "**/.git/**",
                "**/.svn/**",
                "**/.hg/**",
                "**/CVS/**",
                "**/.DS_Store/**",
                "**/node_modules/**",
                "**/bower_components/**",
                "**/vendor/**/{Tests,tests}/**",
                "**/.history/**",
                "**/vendor/**/vendor/**"
            ],
            "description": "Configure glob patterns to exclude certain files and folders from all language server features. Inherits from files.exclude.",
            "scope": "resource"
        },
